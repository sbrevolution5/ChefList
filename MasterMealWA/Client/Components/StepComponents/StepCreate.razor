<EditForm Model="step">
    <MudGrid>
        <MudItem xs="2">

            <MudNumericField Label="Step #" @bind-Value="step.StepNumber" Max="stepmax.Value" Min="1"></MudNumericField>
        </MudItem>
        <MudItem xs="10">

            <MudTextField Label="Step Text" @bind-Value="@step.Text" Lines="5"></MudTextField>
        </MudItem>
    </MudGrid>
</EditForm>

@code {
    [Parameter]
    public Step step { get; set; }
    [Parameter]
    public int? stepmax { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}
