<EditForm Model="step">
    <MudGrid>
        <MudItem xs="2">
            <MudButtonGroup>
                <MudIconButton Size="Size.Small" Variant="Variant.Filled" Icon="@Icons.Material.Filled.ArrowUpward" OnClick="StepDown"></MudIconButton>
                <MudIconButton Size="Size.Small" Variant="Variant.Filled" Icon="@Icons.Material.Filled.ArrowDownward" OnClick="StepUp"></MudIconButton>
            </MudButtonGroup>
        </MudItem>
        <MudItem xs="2">
            <MudNumericField ReadOnly="true" Label="Step #" @bind-Value="step.StepNumber" Max="stepmax.Value" Min="1" HideSpinButtons="true"></MudNumericField>
        </MudItem>
        <MudItem xs="8">

            <MudTextField Label="Step Text" @bind-Value="@step.Text" Lines="5"></MudTextField>
        </MudItem>
    </MudGrid>
</EditForm>

@code {
    [Parameter]
    public Step step { get; set; }
    [Parameter]
    public int? stepmax { get; set; }
    [Parameter]
    public Action StepUp { get; set; }
    [Parameter]
    public Action StepDown { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}
