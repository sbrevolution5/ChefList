@inject IApiService _api
@inject NavigationManager _nav
<MudDialog>
    <DialogContent>

        @*<EditForm OnValidSubmit="CreateIngredient"> </EditForm>*@
    </DialogContent>
    <DialogActions>

    </DialogActions>
</MudDialog>
@code {
    private Ingredient ingredient { get; set; }
    private List<IngredientType> types { get; set; }
    protected override async Task OnInitializedAsync()
    {
        types = await _api.GetAllIngredientTypesAsync();
        return base.OnInitializedAsync();
    }
    public async Task CreateIngredient()
    {
        await _api.CreateNewIngredientAsync(ingredient);
        _nav.NavigateTo("ingredients/index");
    }
}
