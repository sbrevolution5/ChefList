@inject IApiService _api
@inject NavigationManager _nav
<MudDialog>
    <DialogContent>
        <MudTextField Label="Supply Name" @bind-Value="supply.Name"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="EditSupply">Save</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public Supply supply { get; set; }
    public void Cancel()
    {
        MudDialog.Cancel();
    }
    public async Task EditSupply()
    {
        await _api.UpdateSupplyAsync(supply);
        MudDialog.Close(DialogResult.Ok(supply));
    }
}
